# База данных (Prisma)
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/learn_platform"

# Ключ Google Gemini, используется генератором викторин
GEMINI_API_KEY="your-gemini-api-key"
# Явно укажи модель (по умолчанию используем 2.5 Flash)
GEMINI_MODEL="gemini-2.5-flash"

# Секрет для Auth.js / NextAuth (32+ символа, можно сгенерировать `openssl rand -base64 32`)
AUTH_SECRET="set-strong-random-secret"

# Локальная директория для сохранения загруженных файлов
UPLOAD_DIR="uploads"

# Данные для скрипта `npm run prisma:seed`
SEED_TEACHER_EMAIL="teacher@example.com"
SEED_TEACHER_PASSWORD="change-me"

